
@{
    ViewBag.Title = "Novi korisnik";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<form action="/Korisnik/Snimi">
    <h3>Novi korisnik</h3>

    <div class="form-group">
        <label for="comment">Ime i prezime:</label>
        <input name="TextImeiPrezime" type="text" placeholder="Ime i prezime" class="form-control" />
    </div>

    <div class="form-group">
        <label for="comment">Username:</label>
        <input name="TextUsername" type="text" placeholder="Username" class="form-control" />
    </div>
    
    <div class="form-group">
        <label for="comment">Password:</label>
        <input name="TextPassword" type="text" placeholder="Password" class="form-control" />
    </div>

    <input type="submit" value="Snimi" class="btn btn-default" />

</form>